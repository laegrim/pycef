[loggers]
keys=root, scrape.mongo_interface.mongoWrapper, scrape.scrape_cefs, scrape.scrape_info, scrape.scrape_tickers

[handlers]
keys=console, file, email

[formatters]
keys=standard

[logger_root]
level=DEBUG
handlers=console
qualname=scrape
propagate=0

[logger_scrape.mongo_interface.mongoWrapper]
level=DEBUG
handlers=file, email
qualname=scrape.mongo_interface.mongoWrapper
propagate=0

[logger_scrape.scrape_cefs]
level=DEBUG
handlers=file
qualname=scrape.scrape_cefs
propagate=0

[logger_scrape.scrape_info]
level=DEBUG
handlers=file
qualname=scrape.scrape_info
propagate=0

[logger_scrape.scrape_tickers]
level=DEBUG
handlers=file
qualname=scrape.scrape_tickers
propagate=0

[handler_console]
class=StreamHandler
level=DEBUG
formatter=standard
args=(sys.stdout,)

[handler_file]
class=FileHandler
level=INFO
formatter=standard
args=('log.txt', 'a')

[handler_email]
class=handlers.SMTPHandler
level=WARN
formatter=standard
args=('localhost', 'cefserver@laegrim.com', ['steich@gmail.com'], 'CEF Log') 

[formatter_standard]
format=%(asctime)s - %(name)s - %(levelname)s - %(message)s
datefmt=%Y-%m-%d %H:%M:%S

